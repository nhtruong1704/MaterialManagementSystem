<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_ex_mat_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".AdminImportMaterialActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/iv_ad_mat_ex_exit"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_regular"
                android:text="Export Material"
                android:textColor="?attr/colorControlNormal"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_baseline_storefront_24"
                android:drawableTint="?attr/colorControlNormal"
                android:text="Material Name: "
                android:textSize="16dp"
                android:textColor="@color/myColor8" />

            <Spinner
                android:id="@+id/sn_ex_mat_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />
        </LinearLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_mat_ex_no"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_more_24"
                android:drawableTint="?attr/colorControlNormal"
                android:drawablePadding="4dp"
                android:inputType="none"
                android:enabled="false"
                android:hint="Material ID"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_mat_ex_cus"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Customer"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_mat_ex_phone"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/parent"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/loginViewsMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_ad_mat_ex_date"
                    style="@style/modifiedEditText"
                    android:clickable="false"

                    android:cursorVisible="false"
                    android:drawableStart="@drawable/ic_baseline_date_range_24"
                    android:drawableTint="?attr/colorControlNormal"
                    android:focusable="false"

                    android:focusableInTouchMode="false"
                    android:hint="Export Date"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/im_btn_ad_mat_ex_del_dob"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="3dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_view_stream_24"
                android:textAlignment="center" />

        </RelativeLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_mat_ex_amo"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_123_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Amount"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_mat_ex_price"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_attach_money_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Unit Price"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_mat_ex_total_cost"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_calculate_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Total Cost"
                android:inputType="none"
                android:enabled="false"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ad_mat_ex_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Save"
                android:theme="@style/AppTheme.MyButton1" />

            <Button
                android:id="@+id/btn_ad_mat_ex_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Back"
                android:theme="@style/AppTheme.MyButton3" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>